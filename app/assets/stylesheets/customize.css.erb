/* Mobile First Styles */

body {
    font-family: 'Syncopate', sans-serif;
    background-color: black;
    
    color: white;
}

h1, h2, h3, h4, h5, h6 {
    font-family: 'Syncopate', sans-serif;
    color: white;
}

.notice {
    text-align: center;
    color: red;
}

.container {
    max-width: 1170px;
    margin: 0 auto;
    padding: 25px;
    border: 1px solid white;
    background: url('<%= asset_path('img.jpg')%>') no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    -moz-box-shadow:    0px 0px 16px 2px #ccc
    -webkit-box-shadow: 0px 0px 16px 2px #ccc
    box-shadow:         0px 0px 16px 2px #ccc
}

/* Header Styles */
#header {
    min-height: 120px;
    margin-bottom: 35px;

}

#mainHeading {
    width: 100%;
    text-align: center;
    margin-bottom: 25px;
}

.otherFont {
    font-family: 'Libre Baskerville', serif;
    margin: 0px 10px;
    color: #008CBA;
}

.loginButton {
    width: 80%;
    margin: 6px 10px;
}
/* Navigation styles */
.icon-bar.vertical, .icon-bar.small-vertical{
   float: right;  
   width: 85px;  
}

.icon-bar {
    width: 100%;
}

a.item {
    font-size: 11px;
    padding: 12px;
    white-space: nowrap;
}

a.item:hover{
    color:white;
}

/* Form Styles */
input.submitButton {
    padding: 10px 16px;
    background: #008CBA;
    color: white;
    border: none;
    border-radius: 3px;
    font-family: 'Syncopate', sans-serif;
    margin: 15px 0px;
}

.button {
    font-family: 'Syncopate', sans-serif;
    border-radius: 3px;
}
.image {
    border: 5px solid #007095;
}

input.submitButton:hover, .button:hover {
    opacity: .8;
}

form {
    margin: 25px 0px;
}

label {
    color: white;
}

input[type="text"], input[type="password"]{
    margin: 10px 0;
}

/* Modal Styles */
.reveal-modal {
    background-color: black;
}

/* Main Div Styles */
#main {
    min-height: 570px;
}

#searchHeading {
    text-align: left;
}

.columns {
    padding-left: 0;
}

#userProfileInfo {
    margin-bottom: 30px;
}

.eventWrapper {
    margin-top:25px;
}

.searchInfo {
    min-height: 500px;
}

.new_event {
    margin: 0;
}

.social-share-button {
    margin-top: 10px;
}

/* Footer Styles */
footer{
    /*position: absolute;
    bottom: 0;
    width: 75%; */
}

a.backToTop {
    position: relative;
    float: right;
    font-size: 12px;
    color: white;
    bottom: 22px;
}


/* Tablet Styles */
@media only screen and (min-width: 768px) {
    .reveal-modal {
        width: 55%;
    }

    #mainHeading {
        float: left;
        width: 38%;
        text-align: left;
        white-space: nowrap;
    }

    .icon-bar {
        width: 44%;
        float:right;
    }

    #editUserProfile {
        width: 60%;
    }
}

/* Desktop Styles */
@media only screen and (min-width: 1025px) {
    .reveal-modal {
        width: 35%;
    }

    .loginButton {
        float: right;
        width: 23%;
        margin: 6px 10px;
    }


}